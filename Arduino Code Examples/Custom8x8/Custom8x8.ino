void setup() {
  /*
   * The MAX72XX is in power-saving mode on startup, we have to do a wakeup call
   */

  for(int i=0;i<displays;i++){
    lc.shutdown(i,false);
    // Set the brightness to a medium values 
    lc.setIntensity(i,8);
    // and clear the display
    lc.clearDisplay(i);
  }
  
}

